// IMDSPStorage
[
	object,
	uuid(1DCB3A16-33ED-11d3-8470-00C04F79DBC0),
	pointer_default(unique)
]
interface IMDSPStorage : IUnknown
{
    HRESULT SetAttributes([in] DWORD dwAttributes, 
						  [in] _WAVEFORMATEX *pFormat);
